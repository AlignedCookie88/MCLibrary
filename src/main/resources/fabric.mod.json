{
  "schemaVersion": 1,
  "id": "mclibrary",
  "version": "${version}",

  "name": "MCLibrary",
  "description": "A Minecraft: Java Edition Fabric mod that allows you to download content from inside the game.",
  "authors": [
    "AlignedCookie88"
  ],
  "contact": {
    "homepage": "http://mclibrary.alignedcookie88.com/",
    "sources": "https://github.com/AlignedCookie88/MCLibrary/"
  },

  "license": "CC0-1.0",
  "icon": "assets/mclibrary/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.alignedcookie88.mclibrary.MCLibrary"
    ]
  },
  "mixins": [
    "mclibrary.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.10",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
